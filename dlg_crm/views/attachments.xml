<odoo>
    <data>
        <record id="view_dlg_crm_attachment_tree" model="ir.attachment">
            <field name="name">view.dlg.crm.attachment.tree</field>
            <field name="model">dlg_crm.attachment</field>
            <field name="arch" type="xml">
                <tree string="Attachments" editable="top" >
                    <field name="datas" widget="download_link" filename="name" string="File"/>
                    <field name="name" invisible="1"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="create_uid"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>