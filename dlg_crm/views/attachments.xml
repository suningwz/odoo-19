<odoo>
    <data>
        <record id="view_dlg_crm_attachment_tree" model="ir.attachment">
            <field name="name">view.dlg.crm.attachment.tree</field>
                <tree string="Attachments" editable="top" >
                    <field name="datas" widget="download_link" filename="name" string="File"/>
                    <field name="name" invisible="1"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="create_uid"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <record id="action_dlg_crm_attachment_view" model="ir.actions.act_window">
            <field name="name">Adjuntos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ir.attachment</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Adjunto
                </p>
                <p>
                    Click 'Nueva' para a√±adir nuevas acciones
                </p>
            </field>
        </record>

    </data>
</odoo>