<odoo>
    <data>
        <record id="view_dlg_crm_attachment_tree" model="ir.ui.view">
            <field name="name">view.dlg.crm.attachment.tree</field>
            <field name="model">ir.attachment</field>
            <field name="arch" type="xml">
                <tree string="Attachments" editable="top">
                    <field name="datas" widget="download_link" filename="name" string="File"/>
                    <field name="name" invisible="1"/>
                    <field name="res_id"/>
                    <field name="create_uid"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <record id="action_dlg_crm_attachment_view" model="ir.actions.act_window">
            <field name="name">action.dlg.crm.attachment.view</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ir.attachment</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('res_id','=',dlg_crm.action.id),('res_model','=','dlg_crm.action')]</field>
            <field name="context">{'default_res_id':dlg_crm.action.id,'default_res_model':'dlg_crm.action'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Adjunto</p>
                <p>Click 'Nuevo' para a√±adir nuevos adjuntos</p>
            </field>
        </record>

        <menuitem id="menu_dlg_crm_attachment" name="Adjuntos" parent="menu_dlg_crm_root"
                  action="action_dlg_crm_attachment_view" sequence="3"/>
    </data>
</odoo>